{{title "Simple interval" separator=" > " prepend=false}}
{{head-layout}}
<header class="app-header">
  <input class="app-header__menu-checker" type="checkbox" id="foo">
  <LinkTo class="app-header__anchor" @route="index" class="text-decoration-none">
    <img alt="simple interval logo"
      src="/assets/icons/small-logo.svg"
      aria-hidden="true"
      class="app-header__logo"
      width="20"
      height="20"
    />
    <span class="app-header__text">SIMPLE INTERVAL</span>
  </LinkTo>
  <section class="app-header__menu-wrapper">
    <label class="app-header__menu-icon" for="foo">
      <span class="oi oi-menu app-header__menu-icon-menu" data-glyph="menu" aria-hidden="true"></span>
      <span class="oi oi-x app-header__menu-icon-x" data-glyph="x" aria-hidden="true"></span>
    </label>
    <section class="app-header__menu">
      {{!--  <LinkTo @route="about" class="app-header__menu-item">  --}}
        {{!--  <span class="oi oi-book app-header__menu-item-icon" data-glyph="book" aria-hidden="true"></span>  --}}
        {{!--  about  --}}
      {{!--  </LinkTo>  --}}
      <LinkTo @route="new-timer" class="app-header__menu-item">
        <span class="oi oi-plus app-header__menu-item-icon" data-glyph="plus" aria-hidden="true"></span>
        new
      </LinkTo>
      <LinkTo @route="index" class="app-header__menu-item">
        <span class="oi oi-list app-header__menu-item-icon" data-glyph="list" aria-hidden="true"></span>
        list
      </LinkTo>
    </section>
  </section>
</header>
{{outlet}}
