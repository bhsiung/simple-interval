<svg ...attributes width={{@radius}} height={{@radius}}>
  <circle
    class="clock-component__circle clock-component__circle--animated"
    cx="50%"
    cy="50%"
    r="48%"
    fill="none"
    stroke-width="4%"
    style="stroke-dashoffset:{{this.dash}}"
  />
  {{#if @hasOuterRing}}
    <circle
      class="clock-component__circle"
      cx="50%"
      cy="50%"
      r="49.5%"
      fill="none"
      stroke-width="1%"
    />
  {{/if}}
</svg>