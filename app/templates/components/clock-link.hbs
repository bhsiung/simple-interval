<section class="clock-link">
  <LinkTo class="clock-link__anchor focusable" @route="clock" @model={{@index}}>
    <h2 class="clock-link__name">{{@config.name}}</h2>
    <section class="clock-link__bd">
      <table class="clock-link__spec">
        <tr><td>work</td><td>{{ms-to-printable @config.timeOn}}</td></tr>
        <tr><td>rest</td><td>{{ms-to-printable @config.timeOff}}</td></tr>
        <tr><td>round</td><td>{{@config.round}}</td></tr>
        <tr class="clock-link__spec-summary-row">
          <td>overal</td><td>{{this.totalDuration}}</td>
        </tr>
      </table>
    </section>
    <section class="clock__utils">
      <LinkTo
        @route="clock.edit"
        @model={{hash id=@index}}
        data-purpose="edit"
        class="clock__util focusable focusable--text"
        aria-label="edit"
      >
        <span class="oi oi-cog" data-glyph="cog" aria-hidden="true"></span>
        <span class="clock__util-text">Edit</span>
      </LinkTo>
      <button
        class="clock__util focusable focusable--text"
        data-purpose="delete"
        onClick={{action this.onDelete}}
        aria-label="delete"
      >
        <span class="oi oi-trash" data-glyph="trash" aria-hidden="true"></span>
        <span class="clock__util-text">Delete</span>
      </button>
      <button
        class="clock__util focusable focusable--text"
        data-purpose="delete"
        onClick={{action this.onShare}}
        aria-label="delete"
      >
        <span class="oi oi-share-boxed" data-glyph="share-boxed" aria-hidden="true"></span>
        <span class="clock__util-text">Share</span>
      </button>
    </section>
  </LinkTo>
</section>