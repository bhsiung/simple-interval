<div class="clock-component"
  data-status={{if this.shouldShowTimer this.timerState "idle"}}
  onclick={{this.handleMainAction}}
>
  <div class="clock-component__meta">
    <h2 class="clock-component__title">
      <b>{{~@config.name~}}</b>
      {{~#if this.shouldShowTimer}}
        <span class="clock-component__round">
          round {{this.currentRound}} of {{@config.round}}
        </span>
      {{/if~}}
    </h2>
    <p class="clock-component__status">{{this.statusText}}</p>
  </div>
  {{#if this.shouldShowTimer}}
    <div class="clock-component__timer">
      <span class="clock-component__current-time">{{this.second}}</span>
      <span class="clock-component__current-duration">/{{this.currentDuration}}</span>
    </div>
    <button class="clock-component__button" type="button" onclick={{this.handleStop}}>
      <span class="oi oi-eject" data-glyph="eject" aria-hidden="true"></span>
      <span class="oi oi-file" data-glyph="file" aria-hidden="true"></span>
      Reset
    </button>
    <Circle class="clock-component__svg" @radius="90%" @progress={{this.progress}} @hasOuterRing={{true}} />
    <Circle class="clock-component__svg-outer" @radius="100%" @progress={{this.totalProgress}} />
    <Circle class="clock-component__svg-outer clock-component__svg-outer--shadow" @radius="100%" @progress={{2}} />
  {{/if}}
</div>