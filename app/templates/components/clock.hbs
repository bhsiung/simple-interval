<div class="clock-component"
  data-status="{{if this.shouldShowTimer this.timerState "idle"}}"
  onclick={{this.handleMainAction}}
>
  <div class="clock-component__meta">
    <h2 class="clock-component__title">
      <b>{{~@config.name~}}</b>
      {{~#if this.shouldShowTimer}}
        <span class="clock-component__round">
          round {{this.currentRound}} of {{@config.round}}
        </span>
      {{/if~}}
    </h2>
  <p class="clock-component__status">{{this.statusText}}</p>
  </div>
  {{#if this.shouldShowTimer}}
    <p class="clock-component__timer">{{this.second}}</p>
    <button type="button" onclick={{this.handleStop}}>Reset</button>
    <svg class="clock-component__svg">
      <circle
        class="clock-component__circle"
        cx="150"
        cy="150"
        r="147"
        fill="none"
        stroke-width="6"
        style="stroke-dashoffset:{{this.dash}}"
      />
    </svg>
  {{/if}}
</div>